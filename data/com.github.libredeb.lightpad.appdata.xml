<component type="desktop-application">
  <branding>
    <color type="primary">#415d6b</color>
  </branding>

  <id>com.github.libredeb.lightpad</id>
  <launchable type="desktop-id">com.github.libredeb.lightpad.desktop</launchable>
  <metadata_license>CC-BY-4.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>

  <name>LightPad</name>
  <summary>Lightweight Application Launcher</summary>
  <description>
    <p>A lightweight, simple, look nice and powerful application launcher for GNU/Linux.</p>
    <p>Additional features include:</p>
    <ul>
      <li>Wayland compatible</li>
      <li>Dynamic Background</li>
      <li>Blocklist File</li>
    </ul>
  </description>

  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/libredeb/lightpad/master/screenshot.png</image>
      <caption>LightPad in action</caption>
    </screenshot>
  </screenshots>

  <content_rating type="oars-1.1" />

  <requires>
    <display_length compare="ge">600</display_length>
  </requires>

  <supports>
    <control>keyboard</control>
    <control>pointing</control>
  </supports>

  <provides>
    <binary>com.github.libredeb.lightpad</binary>
  </provides>

  <url type="bugtracker">https://github.com/libredeb/lightpad/issues</url>
  <url type="donation">https://www.paypal.com/donate/?hosted_button_id=3MUTW978NRQUC</url>
  <url type="help">https://github.com/libredeb/lightpad/discussions</url>
  <url type="homepage">https://lightpad.sourceforge.io/</url>

  <developer id="org.elementaryos">
    <name>Juan Pablo Lozano</name>
  </developer>
  <project_group>lightpad</project_group>
  <update_contact>libredeb@gmail.com</update_contact>

  <custom>
    <value key="x-appcenter-color-primary">#415d6b</value>
    <value key="x-appcenter-color-primary-text">rgb(9, 18, 25)</value>
    <value key="x-appcenter-suggested-price">1</value>
  </custom>

  <releases>
    <release version="0.0.9" date="2025-05-04" urgency="medium">
      <description>
        <p>A bunch of resolved issues (#5, #9, #16, #21, #23, #26, #28, #29)</p>
      </description>
      <issues>
        <issue url="https://github.com/libredeb/lightpad/issues/5">There are no cursor blinking in the searchbar</issue>
        <issue url="https://github.com/libredeb/lightpad/issues/9">Can't toggle LightPad via keyboard shortcut</issue>
        <issue url="https://github.com/libredeb/lightpad/issues/16">Dependency xterm is no longer required</issue>
        <issue url="https://github.com/libredeb/lightpad/issues/21">Items overflow when doubling pixels</issue>
        <issue url="https://github.com/libredeb/lightpad/issues/23">Can't exit clicking on an empty area</issue>
        <issue url="https://github.com/libredeb/lightpad/issues/26">LightPad opens in wrong monitor</issue>
        <issue url="https://github.com/libredeb/lightpad/issues/28">LightPad can't run gnome apps</issue>
        <issue url="https://github.com/libredeb/lightpad/issues/29">Improve xdg application menu files detection</issue>
      </issues>
    </release>
  </releases>
</component>
